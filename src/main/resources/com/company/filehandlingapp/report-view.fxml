<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<Pane fx:id="pane" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.company.filehandlingapp.ReportController">
    <children>
        <BorderPane>
            <bottom>
                <ToolBar BorderPane.alignment="CENTER">
                    <items>
                        <Button fx:id="exportButton" mnemonicParsing="false" text="Export" translateX="40.0" />
                        <Button fx:id="cancelButton" mnemonicParsing="false" text="Cancel" translateX="80.0" />
                    </items>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
                </ToolBar>
            </bottom>
            <center>
                <VBox alignment="CENTER" BorderPane.alignment="CENTER">
                    <children>
                        <Label text="Report Details">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                            <padding>
                                <Insets bottom="10.0" top="10.0" />
                            </padding>
                        </Label>
                        <GridPane alignment="CENTER" vgap="15.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Label alignment="CENTER" text="Supply sum" textAlignment="CENTER" translateX="10.0">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="supplySumTextField" GridPane.columnIndex="1" />
                                <Label alignment="CENTER" text="Buy sum" textAlignment="CENTER" translateX="10.0" GridPane.rowIndex="1">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                        <TextField fx:id="buySumTextField" layoutX="110.0" layoutY="58.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label alignment="CENTER" text="Remainder" textAlignment="CENTER" translateX="10.0" GridPane.rowIndex="2">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <TextField fx:id="sumRemainderTextField" layoutX="111.0" layoutY="58.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                            </children>
                        </GridPane>
                    </children>
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </padding>
                </VBox>
            </center>
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
        </BorderPane>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</Pane>
